<html>

<head>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/css/materialize.min.css">
  <style>
    body {
      display: flex;
      min-height: 100vh;
      flex-direction: column;
    }

    main {
      flex: 1 0 auto;
    }

    body {
      background: #fff;
    }

    .input-field input[type=date]:focus + label,
    .input-field input[type=text]:focus + label,
    .input-field input[type=email]:focus + label,
    .input-field input[type=password]:focus + label {
      color: #e91e63;
    }

    .input-field input[type=date]:focus,
    .input-field input[type=text]:focus,
    .input-field input[type=email]:focus,
    .input-field input[type=password]:focus {
      border-bottom: 2px solid #e91e63;
      box-shadow: none;
    }
  </style>
</head>

<body>
  <div class="section"></div>
  <main>
    <center>
      <h2>MY-TODO</h2>
      <div class="section"></div>

      <h5 class="indigo-text">Please, login into your account</h5>
      <div class="section"></div>

      <div class="container">
        <div class="z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'col s12') do |f| %>
            <div class='row'>
              <div class='col s12'>
              </div>
            </div>

            <div class='row'>
	      <%= content_tag(:div, f.email_field(:email, autofocus: true, class: 'validate') + content_tag(:label, 'Enter your email', for: 'user_email'), { class: 'input-field col s12' }) %>
	    </div>
            <div class='row'>
              <div class='input-field col s12'>
		<%= f.password_field :password, autocomplete: 'current-password', class: 'validate' %>
		<%= content_tag(:label, 'Enter your Password', for: 'user_password') %>
              </div>
	      <!-- TODO: <% if devise_mapping.rememberable? %>
	      <div class="col s3">
		<%= f.check_box :remember_me %>
		<%= f.label :remember_me %>
	      </div>
	      <% end %> -->
              <!-- TODO: <label style='float: right;'>
		<a class='pink-text' href='#!'><b>Forgot Password?</b></a>
	      </label> -->
            </div>

            <br />
            <center>
	      <%= content_tag(:div, f.submit('Login', name: 'btn_login', class: 'col s12 btn btn-large waves-effect indigo'), class: 'row') %>
            </center>
	    <% end %>
        </div>
      </div>
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to 'Create account', new_registration_path(resource_name) %><br />
      <% end %>
    </center>

    <div class="section"></div>
    <div class="section"></div>
  </main>

  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.1/jquery.min.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/js/materialize.min.js"></script>
</body>
